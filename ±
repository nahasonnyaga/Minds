/**
 * Set the site here to save load time
 * (this works better than any cache!)
 */
$CONFIG->site_name = 'Minds';
$CONFIG->site_url = $_SERVER['SERVER_PORT'] == 443 || $_SERVER['HTTP_X_FORWARDED_PROTO'] == 'https' ? 'https://www.minds.com/' : 'http://www.minds.com/';
